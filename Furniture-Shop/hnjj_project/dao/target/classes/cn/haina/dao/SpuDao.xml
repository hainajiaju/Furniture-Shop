    <!--查询单个商品以及默认图片-->
    <select id="queryImageById" resultMap="SpuMap">
        select s.*,small_image defaultImg
        from spu s,images i
        where s.id = #{id} and s.id = i.spu_id
				limit 0,1
    </select>

